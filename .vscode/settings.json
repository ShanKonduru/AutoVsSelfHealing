{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: API Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/app.py",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        }
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "none"
}